<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cuit.business.product.mapper.ProductMapper">
    <resultMap id="ProductMap" type="com.cuit.business.product.domain.Product">
        <result property="id" column="id"/>
        <result property="etorid" column="etorid"/>
        <result property="productUrl" column="product_url"/>
        <result property="productName" column="product_name"/>
        <result property="productPrice" column="product_price"/>
        <result property="productInfo" column="product_info"/>
        <result property="productStock" column="product_stock"/>
        <result property="status" column="status"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createId" column="create_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateId" column="update_id"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <resultMap id="ProductDTOMap" type="com.cuit.business.product.domain.dto.ProductDTO">
        <result property="id" column="id"/>
        <result property="etorid" column="etorid"/>
        <result property="companyName" column="company_name"/>
        <result property="productUrl" column="product_url"/>
        <result property="productName" column="product_name"/>
        <result property="productPrice" column="product_price"/>
        <result property="productInfo" column="product_info"/>
        <result property="productStock" column="product_stock"/>
        <result property="status" column="status"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createId" column="create_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateId" column="update_id"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectProductList">
        select p.id,p.etorid,p.product_url,p.product_name,p.product_price,e.company_name,
               p.product_info,p.product_stock,p.status,p.del_flag,p.create_id,p.create_time,p.update_id,p.update_time
        from product p
        left join exhibitor e on e.id = p.etorid
    </sql>

    <select id="selectByPage" resultType="com.cuit.business.product.domain.dto.ProductDTO">
        select p.id,p.etorid,p.product_url,p.product_name,p.product_price,e.company_name,
        p.product_info,p.product_stock,p.status,p.del_flag,p.create_id,p.create_time,p.update_id,p.update_time
        from product p
        left join exhibitor e on e.id = p.etorid
        <where>
            p.del_flag = '0' and e.del_flag = '0' and p.etorid in (select id from exhibitor where uid = #{uid})
            <if test="productDTO.status!= null and productDTO.status!= ''"> and p.status = #{productDTO.status}</if>
            <if test="productDTO.etorid!= null and productDTO.etorid!= ''"> and p.etorid = #{productDTO.etorid}</if>
            <if test="productDTO.productName!= null and productDTO.productName!= ''"> and p.product_name like concat('%',#{productDTO.productName},'%')</if>
            <if test="productDTO.companyName !=null and productDTO.companyName != ''">and e.company_name like concat('%',#{productDTO.companyName},'%')</if>
        </where>
    </select>

    <select id="getByEid" resultType="com.cuit.business.product.domain.Product">
        select * from product where etorid = #{etorid}
    </select>

    <select id="selectByPageByEid" resultType="com.cuit.business.product.domain.dto.ProductDTO">
        select * from product where etorid = #{id} and del_flag = '0' and status = '0'
    </select>

</mapper>
